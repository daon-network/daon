# DAON API Server - Production Environment Configuration

# Environment
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://daon_api:YOUR_STRONG_PASSWORD@postgres:5432/daon_production
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_SSL=true

# Security
JWT_SECRET=YOUR_RANDOM_JWT_SECRET_MIN_32_CHARS
ENCRYPTION_KEY=YOUR_RANDOM_ENCRYPTION_KEY_32_CHARS
SESSION_SECRET=YOUR_RANDOM_SESSION_SECRET_MIN_32_CHARS

# API Keys
API_KEY_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Blockchain
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_RPC=http://daon-blockchain:26657
BLOCKCHAIN_REST=http://daon-blockchain:1317
BLOCKCHAIN_CHAIN_ID=daon-mainnet-1
API_MNEMONIC=YOUR_24_WORD_MNEMONIC_PHRASE_HERE

# Email (Optional - for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@yourdomain.com

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=
DATADOG_API_KEY=

# Webhooks
WEBHOOK_TIMEOUT_MS=10000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60

# Performance
NODE_OPTIONS=--max-old-space-size=2048

# External Services
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Domain
API_DOMAIN=api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# SSL/TLS (if terminating SSL at app level)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
