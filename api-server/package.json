{
  "name": "daon-api-server",
  "version": "0.1.0",
  "description": "DAON REST API server bridging SDKs to blockchain",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "node --test src/test/simple-health.test.js",
    "test-full": "node --test src/test/*.test.js",
    "test-integration": "node --test src/test/integration.test.js",
    "test-all": "node --test src/test/*.test.js",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "daon",
    "creator-protection",
    "blockchain",
    "api",
    "content-registry"
  ],
  "author": "DAON Network",
  "license": "SEE LICENSE IN ../LICENSE.md",
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.1",
    "@cosmjs/crypto": "^0.32.2",
    "@cosmjs/proto-signing": "^0.32.2",
    "@cosmjs/stargate": "^0.32.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "prom-client": "^15.1.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daon-network/api-server"
  },
  "bugs": {
    "url": "https://github.com/daon-network/api-server/issues"
  },
  "homepage": "https://docs.daon.network/api/"
}
