{
  "name": "daon-api-server",
  "version": "0.1.0",
  "description": "DAON REST API server bridging SDKs to blockchain",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "db:init": "tsx src/database/init-db.ts",
    "db:generate-key": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "pretest": "npm run build",
    "test": "npm run test:jest && npm run test:node",
    "test:jest": "jest --coverage",
    "test:node": "tsx --test src/test/broker-auth-middleware.test.ts src/test/broker-service.test.ts src/test/duplicate-detection.test.ts",
    "test:unit": "jest src/test/broker-*.test.ts --coverage",
    "test:integration": "jest src/test/broker-integration-full.test.ts --runInBand --testPathIgnorePatterns=/node_modules/ --testPathIgnorePatterns=/dist/",
    "test-integration": "echo 'Integration tests require full infrastructure. Skipping...' && exit 0",
    "test:ci": "jest src/test/broker-endpoints-ci.test.ts --coverage --ci",
    "test:all": "npm run test:jest && npm run test:node",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "daon",
    "creator-protection",
    "blockchain",
    "api",
    "content-registry"
  ],
  "author": "DAON Network",
  "license": "SEE LICENSE IN ../LICENSE.md",
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.1",
    "@cosmjs/crypto": "^0.32.2",
    "@cosmjs/proto-signing": "^0.32.2",
    "@cosmjs/stargate": "^0.32.2",
    "@types/qrcode": "^1.5.6",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "string-similarity": "^4.0.4",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daon-network/api-server"
  },
  "bugs": {
    "url": "https://github.com/daon-network/api-server/issues"
  },
  "homepage": "https://docs.daon.network/api/"
}
