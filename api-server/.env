# DAON API Server Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration  
ALLOWED_ORIGINS=http://localhost:3000,https://docs.daon.network,https://daon.network

# Blockchain Configuration
BLOCKCHAIN_RPC=http://localhost:26657
BLOCKCHAIN_ENABLED=false

# URL Configuration
VERIFICATION_BASE_URL=https://verify.daon.network

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
PROTECT_RATE_LIMIT_MAX=10

# Security
API_KEY_SECRET=your-secret-key-here
ENABLE_API_KEYS=false

# Database (Future)
DATABASE_URL=postgresql://localhost:5432/daon_api
REDIS_URL=redis://localhost:6379

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_FILE_PATH=./logs/
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_BULK_PROTECTION=true
ENABLE_BLOCKCHAIN_INTEGRATION=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# Third-party Services
WEBHOOK_URL=https://your-webhook-endpoint.com/notifications
NOTIFICATION_EMAIL=notifications@daon.network