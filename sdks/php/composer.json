{
    "name": "daon/sdk",
    "description": "DAON Creator Protection SDK for PHP applications with WordPress support",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DAON Network",
            "email": "dev@daon.network",
            "homepage": "https://daon.network"
        }
    ],
    "keywords": [
        "creator-protection",
        "blockchain",
        "copyright",
        "content",
        "fanfiction",
        "ai-protection",
        "wordpress",
        "daon"
    ],
    "homepage": "https://github.com/daon-network/php-sdk",
    "support": {
        "issues": "https://github.com/daon-network/php-sdk/issues",
        "source": "https://github.com/daon-network/php-sdk"
    },
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-hash": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "rector/rector": "^0.18"
    },
    "suggest": {
        "wordpress/wordpress": "For WordPress integration features"
    },
    "autoload": {
        "psr-4": {
            "Daon\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Daon\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "rector": "rector process",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}